{
  "name": "regis-claude-master",
  "version": "1.0.0",
  "description": "AI-Powered Research Assistant with Edge backend and React frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node node_modules/typescript/bin/tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "node node_modules/typescript/bin/tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:all": "vitest run && playwright test",
    "generate:api": "openapi-typescript openapi.yaml -o src/lib/api-types.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.56.2",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.8",
    "highlight.js": "^11.9.0",
    "i18next": "^23.12.2",
    "i18next-resources-to-backend": "^1.2.1",
    "idb": "^8.0.0",
    "jose": "^5.2.3",
    "lucide-react": "^0.562.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.51.2",
    "react-i18next": "^14.1.2",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "vite-bundle-analyzer": "^0.9.2",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^4.0.17"
  }
}
